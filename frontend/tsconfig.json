{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@api/*": ["src/api/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@types/*": ["src/types/*"],
      "@billing/*": ["src/billing/*"],
      "@ads/*": ["src/ads/*"]
    },
    "strict": true
  },
  "include": [
    "App.tsx",
    "index.js",
    "app.config.ts",
    "plugins/**/*.js",
    "src",
    "../shared"
  ]
}
