{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@lib/*": ["lib/*"],
      "@navigation/*": ["navigation/*"]
    },
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["react", "react-native"],
    "skipLibCheck": true
  }
}
