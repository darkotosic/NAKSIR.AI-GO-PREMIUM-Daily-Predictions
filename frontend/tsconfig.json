{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@naksir-types/*": ["types/*"],
      "@lib/*": ["lib/*"],
      "@navigation/*": ["navigation/*"]
    }
  },
  "include": ["src", "../shared"]
}
